# goEDMS Microservices Configuration Example
# Copy this file to .env and customize for your environment

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=/data/goedms.db

# For PostgreSQL (alternative):
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USER=goedms
# DATABASE_PASSWORD=yourpassword
# DATABASE_DBNAME=goedms
# DATABASE_SSLMODE=disable

# Document Storage Paths
DOCUMENT_PATH=/documents
INGRESS_PATH=/ingress
NEW_DOCUMENT_FOLDER=New

# External Service URLs (for microservices architecture)
TESSERACT_SERVICE_URL=http://tesseract-service:8001
PDF_SERVICE_URL=http://pdf-service:8002

# Web UI Configuration
WEB_UI_AUTH=false
WEB_UI_USER=admin
WEB_UI_PASSWORD=Password1

# Server Configuration
LISTEN_ADDR_IP=0.0.0.0
LISTEN_ADDR_PORT=8000

# Reverse Proxy Settings (optional)
PROXY_ENABLED=false
BASE_URL=https://goedms.domain.org

# Frontend Configuration
NEW_DOCUMENT_COUNT=5
SERVER_API_URL=

# Ingress Job Configuration
INGRESS_INTERVAL=60
INGRESS_DELETE=false
INGRESS_PRESERVE=false

# Notifications (optional)
PUSHBULLET_TOKEN=
