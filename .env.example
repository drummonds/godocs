# godocs Environment Configuration
# Copy this file to .env and customize for your local environment
# The .env file is gitignored and will not be committed

# ============================================
# Database Configuration
# ============================================

# Database type: "postgres" or "cockroachdb"
GODOCS_DATABASE_TYPE=postgres

# Individual database connection parameters (recommended for local development)
GODOCS_DATABASE_HOST=localhost
GODOCS_DATABASE_PORT=5432
GODOCS_DATABASE_NAME=godocs
GODOCS_DATABASE_USER=godocs
GODOCS_DATABASE_PASSWORD=your_secure_password_here
GODOCS_DATABASE_SSLMODE=disable

# OR use a full connection string (overrides individual parameters above)
# GODOCS_DATABASE_CONNECTIONSTRING=host=localhost port=5432 user=godocs password=secret dbname=godocs sslmode=disable

# For CockroachDB:
# GODOCS_DATABASE_CONNECTIONSTRING=host=localhost port=26257 user=godocs password=secret dbname=godocs sslmode=require

# ============================================
# Server Configuration (Optional Overrides)
# ============================================

# Server listening port
# GODOCS_SERVERCONFIG_SERVERPORT=8000

# Server listening IP address (leave empty for all interfaces)
# GODOCS_SERVERCONFIG_SERVERADDR=

# API URL override (for Docker or special routing)
# GODOCS_SERVERCONFIG_APIURL=

# ============================================
# Document Storage (Optional Overrides)
# ============================================

# Document library location
# GODOCS_DOCUMENTLIBRARY_DOCUMENTFILESYSTEMLOCATION=documents

# Default folder for new documents
# GODOCS_DOCUMENTLIBRARY_DEFAULTNEWDOCUMENTFOLDER=New

# ============================================
# Ingress Configuration (Optional Overrides)
# ============================================

# Ingress folder path
# GODOCS_INGRESS_INGRESSPATH=ingress

# Ingress scan interval in minutes
# GODOCS_INGRESS_SCHEDULING_INGRESSINTERVAL=10

# Delete files after processing (true/false)
# GODOCS_INGRESS_COMPLETED_INGRESSDELETEONPROCESS=false

# Folder to move processed files
# GODOCS_INGRESS_COMPLETED_INGRESSMOVEFOLDER=done

# Preserve directory structure (true/false)
# GODOCS_INGRESS_HANDLING_PRESERVEDIRSTRUCTURE=true

# ============================================
# OCR Configuration (Optional Overrides)
# ============================================

# Path to Tesseract binary
# GODOCS_OCR_TESSERACTBIN=/usr/bin/tesseract

# ============================================
# Authentication (Optional Overrides)
# ============================================

# Enable web UI authentication (true/false)
# GODOCS_AUTHENTICATION_WEBUIAUTH=false

# Web UI username
# GODOCS_AUTHENTICATION_WEBUIUSER=admin

# Web UI password
# GODOCS_AUTHENTICATION_WEBUIPASSWORD=Password1

# ============================================
# Reverse Proxy (Optional Overrides)
# ============================================

# Enable reverse proxy mode (true/false)
# GODOCS_REVERSEPROXY_PROXYENABLED=false

# Base URL when behind reverse proxy
# GODOCS_REVERSEPROXY_BASEURL=https://godocs.domain.org

# ============================================
# Logging (Optional Overrides)
# ============================================

# Log level: debug, info, warn, error, fatal
# GODOCS_LOGGING_LEVEL=debug

# Log output: file or stdout
# GODOCS_LOGGING_OUTPUTPATH=file

# Log file location
# GODOCS_LOGGING_LOGFILELOCATION=godocs.log

# ============================================
# Notifications (Optional Overrides)
# ============================================

# PushBullet API token
# GODOCS_NOTIFICATIONS_PUSHBULLETTOKEN=

# ============================================
# Frontend (Optional Overrides)
# ============================================

# Number of new documents to show
# GODOCS_FRONTEND_NEWDOCUMENTNUMBER=5
