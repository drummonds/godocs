# =============================================================================
# godocs Configuration
# =============================================================================
# This file contains all configuration with defaults.
# Copy to .env and customize for your environment.
# Environment variables override these defaults.

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8000
SERVER_ADDR=
# API URL override (for Docker/special routing, usually leave blank)
SERVER_API_URL=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: postgres, cockroachdb
DATABASE_TYPE=postgres

# Option 1: Full connection string (overrides individual params below)
DATABASE_CONNECTION_STRING=

# Option 2: Individual parameters (used if CONNECTION_STRING is empty)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=godocs
DATABASE_SSLMODE=disable

# =============================================================================
# DOCUMENT STORAGE
# =============================================================================
# Document library location (relative or absolute path)
DOCUMENT_PATH=documents
# Default folder for new documents (inside document library)
NEW_DOCUMENT_FOLDER=New

# =============================================================================
# INGRESS CONFIGURATION
# =============================================================================
# Ingress folder path
INGRESS_PATH=ingress
# Scan interval in minutes
INGRESS_INTERVAL=10
# Delete files after processing (true/false)
INGRESS_DELETE=false
# Folder to move processed files to
INGRESS_MOVE_FOLDER=done
# Preserve directory structure when moving (true/false)
INGRESS_PRESERVE_STRUCTURE=true

# =============================================================================
# OCR CONFIGURATION
# =============================================================================
# Path to Tesseract binary
# Windows example: C:\\Program Files\\Tesseract-OCR\\tesseract.exe
TESSERACT_PATH=/usr/bin/tesseract

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Enable web UI authentication (true/false)
WEB_UI_AUTH=false
WEB_UI_USER=admin
WEB_UI_PASSWORD=Password1

# =============================================================================
# REVERSE PROXY
# =============================================================================
# Enable reverse proxy mode (true/false)
PROXY_ENABLED=false
# Base URL when behind reverse proxy (no trailing slash)
BASE_URL=https://godocs.domain.org

# =============================================================================
# LOGGING
# =============================================================================
# Log level: debug, info, warn, error, fatal
LOG_LEVEL=debug
# Log output: file, stdout
LOG_OUTPUT=file
# Log file location
LOG_FILE=godocs.log

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# PushBullet API token for notifications
PUSHBULLET_TOKEN=

# =============================================================================
# FRONTEND
# =============================================================================
# Number of new documents to show on home page
NEW_DOCUMENT_COUNT=5
